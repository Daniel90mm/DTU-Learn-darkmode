{
  "manifest_version": 2,
  "name": "DTU After Dark",
  "version": "4.0",
  "description": "Dark mode, live bus departures, and GPA tools for DTU Learn, CampusNet, and other DTU sites.",
  "browser_specific_settings": {
    "gecko": {
      "id": "dtu-dark-mode@dtu-after-dark",
      "strict_min_version": "140.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "icons": {
    "48": "images/icon_48.png",
    "128": "images/icon_128.png"
  },
  "permissions": [
    "storage",
    "https://www.rejseplanen.dk/*",
    "https://karakterer.dtu.dk/*",
    "https://findit.dtu.dk/*",
    "https://evaluering.dtu.dk/*",
    "https://student.dtu.dk/*",
    "https://www.dtu.dk/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "web_accessible_resources": [
    "images/dtuaften.jpg",
    "images/logo_dark.png",
    "images/Corp_White_Transparent.png",
    "images/mojangles_text.png",
    "images/mojangles_text_darkmode_off.png",
    "darkmode.css",
    "data/rooms_spring_2026.json"
  ],
  "content_scripts": [
    {
      "matches": ["*://learn.inside.dtu.dk/*"],
      "js": ["config.js", "darkmode.js"],
      "run_at": "document_start",
      "all_frames": true,
      "match_about_blank": true
    },
    {
      "matches": ["*://s.brightspace.com/*"],
      "js": ["config.js", "darkmode.js"],
      "run_at": "document_start",
      "all_frames": true,
      "match_about_blank": true
    },
    {
      "matches": ["*://sts.ait.dtu.dk/*"],
      "js": ["config.js", "darkmode.js"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["*://evaluering.dtu.dk/*"],
      "js": ["config.js", "darkmode.js"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["*://studieplan.dtu.dk/*"],
      "js": ["config.js", "darkmode.js"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["*://kurser.dtu.dk/*"],
      "js": ["config.js", "darkmode.js"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["*://karakterer.dtu.dk/*"],
      "js": ["config.js", "darkmode.js"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["*://sites.dtu.dk/*"],
      "js": ["config.js", "darkmode.js"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["*://campusnet.dtu.dk/*"],
      "js": ["config.js", "darkmode.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}
