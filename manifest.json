{
  "manifest_version": 2,
  "name": "DTU Dark Mode",
  "version": "1.1",
  "description": "Dark mode for DTU Sites - DTU After Dark",
  "browser_specific_settings": {
    "gecko": {
      "id": "dtu-dark-mode@dtu-after-dark",
      "strict_min_version": "140.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "icons": {
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "permissions": ["storage", "https://www.rejseplanen.dk/*"],
  "web_accessible_resources": ["dtuaften.jpg", "logo_dark.png", "Corp_White_Transparent.png", "Mojangles text.png", "Mojangles text darkmode off.png", "darkmode.css"],
  "content_scripts": [
    {
      "matches": ["*://learn.inside.dtu.dk/*"],
      "js": ["darkmode.js"],
      "run_at": "document_start",
      "all_frames": true,
      "match_about_blank": true
    },
    {
      "matches": ["*://s.brightspace.com/*"],
      "js": ["darkmode.js"],
      "run_at": "document_start",
      "all_frames": true,
      "match_about_blank": true
    },
    {
      "matches": ["*://sts.ait.dtu.dk/*"],
      "js": ["darkmode.js"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["*://evaluering.dtu.dk/*"],
      "js": ["darkmode.js"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["*://studieplan.dtu.dk/*"],
      "js": ["darkmode.js"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["*://kurser.dtu.dk/*"],
      "js": ["darkmode.js"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["*://karakterer.dtu.dk/*"],
      "js": ["darkmode.js"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["*://sites.dtu.dk/*"],
      "js": ["darkmode.js"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["*://campusnet.dtu.dk/*"],
      "js": ["darkmode.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}
